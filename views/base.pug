html(lang="es")
    head
        block head
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            link(rel="stylesheet" href="/css/style.css")
            link(rel="shortcut icon", type="image/png" href="/img/favicon.png")
            title #{titulo} 
            link(rel="stylesheet",  href="https://fonts.googleapis.com/css?family=Lato:300,300i,700")
            script(src='https://js.stripe.com/v3/')
            link( rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css")


    body


        //-Header
        
        header.header
            nav.nav.nav--tours
                a.nav__el(href='/') 
                    span()     EventosRD 

                a.nav__el(href='/giras') Giras 
                a.nav__el(href='/eventosdeportivos') Eventos Deportivos 
                a.nav__el(href='/excursioneseducativas') Eventos Educativos 
            .header__logo
            nav.nav.nav--user
                if usuario
                    a.nav__el.salir Salir
                    a.nav__el(href='/me')
                        img.nav__user-img(src=`img/users/${usuario.imagen}` alt='Foto del Usuario')
                        span=usuario.nombre.split(' ')[0]
                else
                    a.nav__el(href='/login') Entrar
                    a.nav__el.nav__el--cta(href='/registrarse') Registrarse
            


        //-Body
        block contenido
           h1.administracion Admin

        
    


        
        //-Footer
        footer.footer
            .footer__logo
            ul.footer__nav
                li: a(href='#') Contactanos
                li: a(href='/convertirseEnGuia') Conviertete en un Guia
                li: a(href='#') Acerca de Nosotros
            p.footer__copyright &copy; by Enderson Gomez

        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js')
        script(src='/js/login.js')
        script(src='/js/logout.js')
        script(src='/js/signup.js')
        script(src='/js/actualizarUsuario.js')
        script(src='/js/pagos.js')
        script(src='/js/actualizarContrasena.js')
        script(src='/js/olvidarContrasena.js')
        script(src='/js/recuperarContrasena.js')
        script(src='/js/subirImagenesEvento.js')
        script(src='/js/editarUsuarioAdmin.js')
        script(src='/js/deleteAdmin.js')
        script(src='/js/convertirseenguia.js')

        script(src='https://js.stripe.com/v3/')







        
            



